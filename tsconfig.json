{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./out",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/*"],
      "@app/*": ["./src/app/*"],
      "@amq/*": ["./src/amq/*"],
      "@build/*": ["./src/build/*"],
    },

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },

  "include": [
    "./src/**/*"
  ]
}