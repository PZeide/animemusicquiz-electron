{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./out",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/*"],
      "@app/*": ["./src/app/*"],
      "@api/*": ["./src/app/api/*"],
      "@amq/*": ["./src/main/*"]
    },

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true
  },

  "include": [
    "./src/**/*"
  ]
}